<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleCaption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_caption_text_size</item>
        <item name="android:padding">@dimen/title_caption_padding</item>
    </style>

    <style name="ItemDescription">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/item_description_text_size</item>
    </style>
</resources>
