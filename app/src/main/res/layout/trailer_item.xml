<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trailer_item">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_play_icon"
            android:layout_width="@dimen/trailer_item_icon_size"
            android:layout_height="@dimen/trailer_item_icon_size"
            android:padding="@dimen/trailer_item_icon_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play_button" />

        <TextView
            android:id="@+id/tv_trailer_name"
            style="@style/ItemDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_play_icon"
            app:layout_constraintTop_toBottomOf="parent"
            tools:text="Trailer name (ENG)" />
    </android.support.constraint.ConstraintLayout>
</layout>